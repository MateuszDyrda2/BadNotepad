<Window x:Class="BadNotepad.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BadNotepad"
        mc:Ignorable="d"
        Title="PopupWindow" Height="100" Width="200">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Text}"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="{Binding B1Text}" Command="{Binding B1Command}"/>
            <Button Content="{Binding B2Text}" Command="{Binding B2Command}"/>
        </StackPanel>
    </StackPanel>
</Window>
